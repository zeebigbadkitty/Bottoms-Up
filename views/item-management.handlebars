  <!--Form Container-->
  <div class="item-management-background-image">
  <form class="form-inline input-form">
    <label class="" for="inlineFormCustomSelectPref">Category</label>
    <select class="custom-select form-select my-4 mr-sm-6" data-width="150px" id="category-type">
      <option selected>Choose...</option>
  
      {{#each categories as | category |}}
        <option id="category-name" value = {{category.category}}>{{category.category}}
          
        </option>
      {{/each}}

    </select></form>
  <form class="form">

    <div class="form-row">

      <div class="form-group col-md-6 input-group">
        <label class="form-label ">Product Name:</label>
        <input type="text" id="product-name" class="width-150 " placeholder="Enter Product Name">
      </div>

      <div class="form-group col-md-6 input-group">
        <label class="form-label">Quantity On Hand:</label>
        <input type="number" id="replyNumber" min="0" data-bind="value:replyNumber" class="width-150" placeholder="Enter Quantity">
      </div>

      <div class="form-group col-md-6 input-group">
        <label>Product Price:</label>

        <input type="number" id="product-price" class="width-150" placeholder="Enter Price">


      </div>

      <div class="form-group col-md-6 input-group">
        <label>Minimum PAR level:</label>
        <input type="number" id="product-par" class="width-150" placeholder="Enter Minimum Quantity">
      </div>

    </div>
   <br>
    <button type="click" class="btn btn-light input-button" id="add-item"><i class="fa-solid fa-plus"></i> Add Item</button>
  </form>
</div>
 

<script src="/js/itemManagement.js"></script>

